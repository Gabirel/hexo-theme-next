// Post Expand
// --------------------------------------------------

.posts-expand {
  &.index {
    .post-title, .post-meta {
      text-align: $site-meta-text-align;

      +mobile() {
        text-align: center;
      }
    }

    .post-meta {
      margin: 5px 0 20px 0;
    }
  }

  .post-title .post-title-link {
    color: $gainsboro;
    &::before {
      background: $header-svg-fill-color;
    }
  }

  .post-meta-item a {
    color: $header-svg-fill-color;

    &:hover {
      color: $orange-yellow;
      border-bottom-color: $orange-yellow;
    }
  }

  .post-header .post-title {
    color: $gainsboro;
  }

  .post-eof {
    display: none;
  }

  .post-block:not(:first-child) {
    margin-top: 120px;
  }

  .post-title, .post-meta {
    text-align: center;
  }

  .post-tags {
    text-align: left;

    a {
      background: $header-svg-fill-color;
      color: $black-pure;
      border-bottom: none;
      padding: 1px 5px;

      &:hover {
        background: $orange-yellow;
      }
    }
  }

  .post-nav {
    margin-top: 40px;
  }
}

.post-button {
  margin-top: 20px;
  text-align: left;

  .btn {
    background: none;
    border: 0;
    border-bottom: 2px solid $orange-yellow;
    color: $orange-yellow;
    padding: 0;
    transition-property: border;

    &:hover {
      border-bottom-color: $header-svg-fill-color;
    }
  }
}


.headerlink::before {
  color: $header-svg-fill-color;
}
