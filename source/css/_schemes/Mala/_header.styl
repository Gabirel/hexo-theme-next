// Header
// --------------------------------------------------
.header {
  background: $header-bg-color;
  ::selection {
    background: none;
  }
}

.header-inner {
  align-items: center;
  display: flex;
  padding: 20px 0;

  +mobile() {
    display: block;
    padding: 10px 0;
  }
}

.site-meta {
  line-height: normal;

  .brand {
    padding: 2px 1px;
    color: $header-brand-color;
    background: none;

    +mobile() {
      display: block;
    }
  }

  .site-title {
    font-weight: bolder;
  }
}

.logo-line {
  background: $header-brand-color;

  display: block;
  height: 2px;
  margin: 0 auto;
  width: 75%;

  +mobile() {
    display: none;
  }
}

.use-motion {
  .logo-line:first-of-type {
    transform-origin: left;
    transform: scaleX(0);
  }

  .logo-line:last-of-type {
    transform-origin: right;
    transform: scaleX(0);
  }
}

.site-subtitle {
  display: none;
}

.languages {
  font-size: 1em;

  +mobile() {
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

