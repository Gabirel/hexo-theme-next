// Global border color.
$border-color                   = $grey-light

// Background color for <body>
$body-bg-color                  = $black-middle

// Background color for <header>
$header-bg-color                = $black-low
$header-brand-color             = $gainsboro
$header-menu-hover-color        = $blue

// Background color for <footer>
$footer-bg-color                = $black-low

// Background color for <post title>
$post-title-color               = $gray-lighter
$post-title-link-before-color   = $blue-bright

// <post tags title>
$post-tags-bg-color             = $black-low
$post-tags-text-color           = $gray-lighter
$post-body-link-color 			    = $purple-pink

// Pagination
// --------------------------------------------------
$pagination-active-bg           = $black-light

// selection
$selection-bg					          = $brown-red
$selection-color              	= $orange
$selection-bg-color             = $brown-red
$selection-text-color           = $orange

// copy from Mist.styl
$font-size-headings-base        = 26px

$brand-color                    = $black-deep
$brand-hover-color              = $brand-color

$site-meta-text-align           = left
$posts-collapse-left            = 0

$read-more-color                = $link-color
$read-more-bg-color             = transparent

// Base global setting


// Post nav color
$post-nav-color 				        = $blue-bright

// comments
$comment-nick-color             = $blue-lighter
$comment-select-category        = $grey-white
$comment-text-color             = $blue-green
$comment-email-text-color       = $blue-green

// TODO: Update this
// table
$table-row-odd-bg-color         = #333
$table-row-hover-bg-color       = #778899   //Light Slate Gray

table>tbody>tr {
  &:nth-of-type(odd) { background-color: $table-row-odd-bg-color; }
  &:hover { background-color: $table-row-hover-bg-color; }
}

// blockquote
blockquote {
  color: #ffbf00 !important;
  border-left: 4px solid $gray-lighter;
}
